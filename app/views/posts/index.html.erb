<h1>Blog</h1>

<div id="post">
<% @posts.each do |post| %>
    <h3><%= post.title %></h3>
    <div><%= truncate( post.content, :length => 500, :omission =>  "...")  %></div>
    <div id="credits">
        <span><b>autor: </b><%= post.name %></span>
        <span><i class="icon-share-alt"></i><%= link_to 'Ver', post %></span>
        <span><i class="icon-pencil"></i><%= link_to 'Editar', edit_post_path(post) %></span>
        <span><i class="icon-trash"></i><%= link_to 'Borrar', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </div>
<% end %>
</div>

<br />

<%= link_to 'New Post', new_post_path , :class => "btn btn-primary"%>
